@startuml
abstract class Personaje {
    - vida: int
    - experiencia: int
    - batallasGanadas: int
    + Personaje(vida: int)
    + <<abstract>> atacar(enemigo: Personaje): void
    + <<abstract>> defensa(): int
    + subirNivel(): void
    + toString(): String
}

class Guerrero {
    - fuerza: int
    + Guerrero(vida: int, fuerza: int)
    + atacar(enemigo: Personaje): void
    + defensa(): int
}

class Mago {
    - mana: int
    + Mago(vida: int, mana: int)
    + atacar(enemigo: Personaje): void
    + defensa(): int
}

class Arquero {
    - precision: int
    + Arquero(vida: int, precision: int)
    + atacar(enemigo: Personaje): void
    + defensa(): int
}

class P1JuegoRolEjecutor {
    + main(args: String[]): void
}

Personaje <|-- Guerrero
Personaje <|-- Mago
Personaje <|-- Arquero
P1JuegoRolEjecutor ... Personaje
@enduml